{
  "manifest_version": 2,
  "name": "Easier to Ask for Forgiveness",
  "version": "0.0.1",
  "description": "A chrome extension that attempts to get additional permissions when clicked",
  "icons": {
   "16": "icons/icon16.png",
   "48": "icons/icon48.png",
   "128": "icons/icon128.png"
  },

  "permissions": [
   "tabs",
   "<all_urls>"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "src/styles.css"
  ]
}
